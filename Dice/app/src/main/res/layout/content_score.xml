<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="350dp"
        android:id="@+id/listViewFromDB"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="25dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
    </ListView>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="goBackToRoll"
        android:text="Done! Go back."
        android:id="@+id/doneBtn"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_below="@+id/deleteAllBtn"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete score"
        android:id="@+id/deleteAllBtn"
        android:onClick="deleteAllScore"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/listViewFromDB"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="47dp" />

</RelativeLayout>